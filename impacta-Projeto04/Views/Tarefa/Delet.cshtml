@model Tarefa

@{
    ViewData["Title"] = "Exlcuir Tarefas";
}
<h1 class="mt-3">Excluir Tarefas</h1>
<hr />
<div id="excluir" class="container">
    <h4>Tem certeza que deseja excluir essa tarefa?</h4>
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.TarefaID
        </dd>
        <dt class="col-sm-2">
            Nome:
        </dt>
        <dd class="col-sm-10">
            @Model.Nome)
        </dd>
        <dt class="col-sm-2">
            Status:
        </dt>
        <dd class="col-sm-10">
            @Model.Status)
        </dd>
        <dt class="col-sm-2">
            Data de Início:
        </dt>
        <dd class="col-sm-10">
            @Model.DataInicio)
        </dd>
        <dt class="col-sm-2">
            Data de Conclusão:
        </dt>
        <dd class="col-sm-10">
            @Model.DataConclusao
        </dd>
    </dl>
    <form id="formExcluir" asp-action="Delete">
        <input type="hidden" asp-for="TarefaID" />
        <button type="submit" class="btn btn-danger">Excluir</button>
        <a class="btn btn-light" asp-action="Index">Voltar</a>
    </form>
</div>